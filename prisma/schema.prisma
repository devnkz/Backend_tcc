generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model componente {
  id_componente   String     @id @default(uuid())
  nome_componente String
  fkId_curso      String     @map("fkId_curso")
  curso           curso      @relation(fields: [fkId_curso], references: [id_curso])
  pergunta        pergunta[]

  @@index([fkId_curso])
}

model curso {
  id_curso   String       @id @default(uuid())
  nome_curso String
  componente componente[]
  pergunta   pergunta[]
  usuarios   usuarios[]
}

model denuncias {
  id_denuncia              String       @id @default(uuid())
  fkId_usuario             String
  fkId_conteudo_denunciado String
  descricao                String
  nivel_denuncia           Int
  status                   String       @default("pendente")
  resultado                String?
  tipo_denuncia            String?
  dataCriacao_denuncia     DateTime     @default(now())
  tipo_conteudo            String
  fkId_usuario_conteudo    String
  usuarios                 usuarios     @relation(fields: [fkId_usuario], references: [id_usuario])
  penalidades              penalidades?

  @@index([fkId_usuario])
}

model grupo {
  id_grupo     String     @id @default(uuid())
  nome_grupo   String
  fkId_usuario String
  usuarios     usuarios   @relation(fields: [fkId_usuario], references: [id_usuario])
  membro       membro[]
  mensagem     mensagem[]

  @@index([fkId_usuario])
}

model membro {
  id_membro    String   @id @default(uuid())
  fkId_usuario String
  fkId_grupo   String
  grupo        grupo    @relation(fields: [fkId_grupo], references: [id_grupo])
  usuarios     usuarios @relation(fields: [fkId_usuario], references: [id_usuario])

  @@unique([fkId_usuario, fkId_grupo])
  @@index([fkId_grupo])
}

model mensagem {
  id_mensagem          String     @id @default(uuid())
  mensagem             String
  fkId_usuario         String
  fkId_grupo           String
  dataCriacao_Mensagem DateTime   @default(now())
  replyToId            String?
  grupo                grupo      @relation(fields: [fkId_grupo], references: [id_grupo])
  usuarios             usuarios   @relation(fields: [fkId_usuario], references: [id_usuario])
  replyTo              mensagem?  @relation("mensagemTomensagem", fields: [replyToId], references: [id_mensagem])
  replies              mensagem[] @relation("mensagemTomensagem")

  @@index([fkId_grupo])
  @@index([fkId_usuario])
  @@index([replyToId])
}

model notificacoes {
  id_notificacao          String   @id @default(uuid())
  fkId_usuario            String
  titulo                  String
  mensagem                String
  lida                    Boolean  @default(false)
  tipo                    String
  fkId_denuncia           String?
  dataCriacao_notificacao DateTime @default(now())
  usuarios                usuarios @relation(fields: [fkId_usuario], references: [id_usuario])

  @@index([fkId_usuario])
  @@index([fkId_denuncia])
}

model penalidades {
  id_penalidade          String    @id @default(uuid())
  fkId_usuario           String
  fkId_denuncia          String    @unique
  perder_credibilidade   Int
  descricao              String
  ativa                  Boolean   @default(true)
  dataCriacao_penalidade DateTime  @default(now())
  dataFim_penalidade     DateTime
  dataInicio_penalidade  DateTime
  denuncias              denuncias @relation(fields: [fkId_denuncia], references: [id_denuncia])
  usuarios               usuarios  @relation(fields: [fkId_usuario], references: [id_usuario])

  @@index([fkId_usuario])
}

model pergunta {
  id_pergunta              String     @id @default(uuid())
  pergunta                 String
  fkId_usuario             String
  fkId_componente          String
  dataCriacao_pergunta     DateTime   @default(now())
  fkId_curso               String
  dataAtualizacao_pergunta DateTime?
  componente               componente @relation(fields: [fkId_componente], references: [id_componente])
  curso                    curso      @relation(fields: [fkId_curso], references: [id_curso])
  usuarios                 usuarios   @relation(fields: [fkId_usuario], references: [id_usuario])
  resposta                 resposta[]

  @@index([fkId_componente])
  @@index([fkId_curso])
  @@index([fkId_usuario])
}

model resposta {
  id_resposta              String    @id @default(uuid())
  resposta                 String
  fkId_usuario             String
  fkId_pergunta            String
  dataCriacao_resposta     DateTime  @default(now())
  dataAtualizacao_resposta DateTime?
  pergunta                 pergunta  @relation(fields: [fkId_pergunta], references: [id_pergunta], onDelete: Cascade)
  usuarios                 usuarios  @relation(fields: [fkId_usuario], references: [id_usuario])

  @@index([fkId_pergunta])
  @@index([fkId_usuario])
}

model tipousuario {
  id_tipousuario   String     @id @default(uuid())
  nome_tipousuario String
  usuarios         usuarios[]
}

model usuarios {
  id_usuario              String                   @id @default(uuid())
  nome_usuario            String
  apelido_usuario         String
  foto_perfil             String?
  email_usuario           String                   @unique
  senha_usuario           String
  fkIdTipoUsuario         String
  dataCriacao_usuario     DateTime                 @default(now())
  cursoId_curso           String?
  credibilidade_usuario   Int
  denuncias               denuncias[]
  grupo                   grupo[]
  membro                  membro[]
  mensagem                mensagem[]
  notificacoes            notificacoes[]
  penalidades             penalidades[]
  pergunta                pergunta[]
  resposta                resposta[]
  codigoVerificacaoEmails CodigoVerificacaoEmail[]
  curso                   curso?                   @relation(fields: [cursoId_curso], references: [id_curso])
  tipousuario             tipousuario              @relation(fields: [fkIdTipoUsuario], references: [id_tipousuario])
  progressoConquistas     ProgressoConquista[]
  redefinirSenhas         redefinirSenha[]

  @@index([cursoId_curso])
  @@index([fkIdTipoUsuario])
}

model CodigoVerificacaoEmail {
  id_codigoverificacaoemail String   @id @default(uuid())
  email_usuario             String
  codigo                    String
  dataCriacao_codigo        DateTime @default(now())
  dataExpiracao_codigo      DateTime
  usuario                   usuarios @relation(fields: [email_usuario], references: [email_usuario])
}

model Conquista {
  id           String               @id @default(uuid())
  titulo       String
  descricao    String
  progressoMax Int
  usuarios     ProgressoConquista[]
}

model ProgressoConquista {
  id           String   @id @default(uuid())
  usuarioId    String
  conquistaId  String
  progresso    Int      @default(0)
  concluida    Boolean  @default(false)
  atualizadoEm DateTime @updatedAt

  usuario   usuarios  @relation(fields: [usuarioId], references: [id_usuario])
  conquista Conquista @relation(fields: [conquistaId], references: [id])
}

model redefinirSenha {
  id_redefinirsenha       String   @id @default(uuid())
  email_usuario           String
  token_redefinirsenha    String
  dataCriacao_redefinir   DateTime @default(now())
  dataExpiracao_redefinir DateTime
  usuario                 usuarios @relation(fields: [email_usuario], references: [email_usuario])
}
