generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id              String      @id @default(uuid())
  name            String
  apelido         String
  email           String      @unique
  senha           String
  fkIdTipoUsuario String
  createdAt       DateTime    @default(now())
  pergunta        pergunta[]
  grupos          grupoUser[]
}

// Feito 

model pergunta {
  id            String   @id @default(uuid())
  fkIdUsuario   String
  pergunta      String
  fkIdComponent String
  createdAt     DateTime @default(now())

  user       user       @relation(fields: [fkIdUsuario], references: [id])
  componente componente @relation(fields: [fkIdComponent], references: [id])
}

// Feito

model componente {
  id             String     @id @default(uuid())
  nomeComponente String
  fkIdCurso      String
  pergunta       pergunta[]
}

model tag {
  id           String @id @default(uuid())
  nomeTag      String
  descricaoTag String
}

model artigo {
  id             String @id @default(uuid())
  fkIdComponente String
  nomeArtigo     String
  textoArtigo    String
}

model resposta {
  id           String   @id @default(uuid())
  fkIdPergunta String
  fkIdUsuario  String
  resposta     String
  createdAt    DateTime @default(now())
}

model comentario {
  id           String   @id @default(uuid())
  fkIdResposta String
  fkIdUsuario  String
  comentario   String
  createdAt    DateTime @default(now())
}

model grupo {
  id             String      @id @default(uuid())
  nomeGrupo      String
  fkIdComponente String
  membros        grupoUser[]
}

model grupoUser {
  id      String @id @default(uuid())
  grupoId String
  userId  String

  grupo grupo @relation(fields: [grupoId], references: [id])
  user  user  @relation(fields: [userId], references: [id])

  @@unique([grupoId, userId])
}

model tipousuario {
  id              String @id @default(uuid())
  nomeTipoUsuario String
}

// Feito  

model curso {
  id        String @id @default(uuid())
  nomeCurso String
}
